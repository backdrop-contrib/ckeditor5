/**
 * Retrieves the full list of installed CKEditor plugins.
 */
function ckeditor5_plugins() {
  $plugins = module_invoke_all('ckeditor5_plugins');
  backdrop_alter('ckeditor5_plugins', $plugins);
  return $plugins;
}

